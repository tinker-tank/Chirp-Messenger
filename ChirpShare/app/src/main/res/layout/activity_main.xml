<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.chirp.chirpshare.MainActivity"
    android:onClick="onBackgroundClick">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/versionInfo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/version_ts"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="2dp"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/chirpInfo"
        android:layout_above="@id/versionInfo"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/chirp_info_ts"
        android:textColor="@color/colorDarkGrey"
        android:layout_marginBottom="10dp"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:textAlignment="center"
        android:text="@string/chirp_info"
        />

</RelativeLayout>
